@model TestAuthorize20201024.Models.UserModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<form action="Login/Check" method="Post">
    <div class="row">
        <div class="col-md-12">
            @Html.TextBoxFor(model => Model.Name, new { @class = "form-control" })
        </div>
        <div class="col-md-12">
            @Html.TextBoxFor(model => Model.Password, new { @class = "form-control" })
        </div>
        <div class="col-md-12">
            <input type="submit" class="buttom btn-success" value="Login" />
        </div>
    </div>
</form>
